{
  "baseUrl": "https://test-api.k6.io",
  "scenarios": {
    "smoke": {
      "executor": "constant-vus",
      "vus": 1,
      "duration": "5s"
    },
    "load": {
      "executor": "ramping-vus",
      "startVUs": 0,
