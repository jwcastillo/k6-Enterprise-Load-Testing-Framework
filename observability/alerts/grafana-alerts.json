{
  "groups": [
    {
      "name": "k6-alerts",
      "interval": "30s",
      "rules": [
        {
          "uid": "k6-high-error-rate",
          "title": "High Error Rate",
          "condition": "C",
          "data": [
            {
              "refId": "A",
              "queryType": "",
              "relativeTimeRange": {
                "from": 300,
                "to": 0
              },
              "datasourceUid": "prometheus",
              "model": {
                "expr": "sum(rate(k6_http_req_failed[1m]))",
                "refId": "A"
              }
            },
            {
              "refId": "B",
              "queryType": "",
              "relativeTimeRange": {
                "from": 300,
                "to": 0
              },
              "datasourceUid": "prometheus",
              "model": {
                "expr": "sum(rate(k6_http_reqs[1m]))",
                "refId": "B"
              }
            },
            {
              "refId": "C",
              "queryType": "",
              "relativeTimeRange": {
                "from": 0,
                "to": 0
              },
              "datasourceUid": "-100",
              "model": {
                "conditions": [
                  {
                    "evaluator": {
                      "params": [5],
                      "type": "gt"
                    },
                    "operator": {
                      "type": "and"
                    },
                    "query": {
                      "params": ["C"]
                    },
                    "type": "query"
                  }
                ],
                "datasource": {
                  "type": "__expr__",
                  "uid": "-100"
                },
                "expression": "(A / B) * 100",
                "refId": "C",
                "type": "math"
              }
            }
          ],
          "noDataState": "NoData",
          "execErrState": "Error",
          "for": "2m",
          "annotations": {
            "description": "Error rate is above 5% for 2 minutes",
            "summary": "High error rate detected in k6 load test"
          },
          "labels": {
            "severity": "critical"
          }
        },
        {
          "uid": "k6-slow-response",
          "title": "Slow Response Time",
          "condition": "B",
          "data": [
            {
              "refId": "A",
              "queryType": "",
              "relativeTimeRange": {
                "from": 300,
                "to": 0
              },
              "datasourceUid": "prometheus",
              "model": {
                "expr": "k6_http_req_duration{quantile=\"0.95\"}",
                "refId": "A"
              }
            },
            {
              "refId": "B",
              "queryType": "",
              "relativeTimeRange": {
                "from": 0,
                "to": 0
              },
              "datasourceUid": "-100",
              "model": {
                "conditions": [
                  {
                    "evaluator": {
                      "params": [500],
                      "type": "gt"
                    },
                    "operator": {
                      "type": "and"
                    },
                    "query": {
                      "params": ["B"]
                    },
                    "type": "query"
                  }
                ],
                "datasource": {
                  "type": "__expr__",
                  "uid": "-100"
                },
                "expression": "A",
                "refId": "B",
                "type": "threshold"
              }
            }
          ],
          "noDataState": "NoData",
          "execErrState": "Error",
          "for": "2m",
          "annotations": {
            "description": "p95 response time is above 500ms for 2 minutes",
            "summary": "Slow response time detected"
          },
          "labels": {
            "severity": "warning"
          }
        }
      ]
    }
  ]
}
